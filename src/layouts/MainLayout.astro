---
import Navbar from "@/components/Navbar.astro";
import Layout from "@/layouts/Layout.astro";

const anim = {
  old: {
    name: "drop-out",
    duration: "250ms",
    easing: "ease-in"
  },
  new: {
    name: "pop-in",
    delay: "250ms",
    easing: "ease-out"
  }
};

const customTransition = {
  forwards: anim,
  backwards: anim
};
---

<Layout>
  <main>
    <Navbar />
    <div transition:animate={customTransition}>
      <slot />
    </div>
  </main>
</Layout>

<style lang="scss">
  main {
    display: flex;
    flex-direction: column;
    width: 100%;
    min-height: 100vh;
    min-height: 100svh;
    position: relative;
    align-items: center;
    padding: 0 20px;
    padding-top: 35svh;

    div {
      width: min(90%, 1280px);
    }
  }
</style>
