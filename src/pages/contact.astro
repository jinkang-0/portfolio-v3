---
import ContactCard from "@/components/ContactCard.astro";
import MainLayout from "@/layouts/MainLayout.astro";
import EmailIcon from "@/components/icons/EmailIcon";
import GitHubIcon from "@/components/icons/GitHubIcon";
import LinkedInIcon from "@/components/icons/LinkedInIcon";
---

<MainLayout>
  <article class="container">
    <h1>Jinkang Fang</h1>
    <div class="contacts">
      <ContactCard>
        <EmailIcon />
        <a href="mailto:jinkang.fang@gmail.com">jinkang.fang@gmail.com </a>
      </ContactCard>
      <ContactCard>
        <LinkedInIcon />
        <a href="https://www.linkedin.com/in/jinkang-fang/" target="_blank">
          Jinkang Fang
        </a>
      </ContactCard>
      <ContactCard>
        <GitHubIcon />
        <a href="https://github.com/jinkang-0" target="_blank">jinkang-0</a>
      </ContactCard>
    </div>
  </article>
</MainLayout>

<style lang="scss">
  .container {
    grid-column: content;
  }

  .contacts {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-top: 16px;
  }

  a {
    color: black;
    text-decoration: none;

    &:hover {
      text-decoration: underline;
    }
  }
</style>
