---
import MainLayout from "@/layouts/MainLayout.astro";
import AboutSection from "@/sections/about.astro";
import WorkSection from "@/sections/work.astro";
import PortfolioSection from "@/sections/portfolio.astro";
import ContactSection from "@/sections/contact.astro";
---

<MainLayout>
  <article class="layout-grid">
    <AboutSection />
    <WorkSection />
    <PortfolioSection />
    <ContactSection />
  </article>
</MainLayout>

<style lang="scss">
  article {
    grid-column: full;
    row-gap: 240px;
  }
</style>
